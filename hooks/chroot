#!/bin/sh
set -e

# Hook for building live images
#
# This script is run in the built chroot after all packages are installed,
# before it is packed into a squashfs. This is where you can apply extra tweaks
# to the live system.

apt-get remove -y --purge --auto-remove transmission-common empathy
apt-get remove -y --purge --auto-remove gnome-getting-started-docs
wget -O /usr/local/bin/gnomeshell-extension-manage "https://raw.githubusercontent.com/robdyke/ubuntu-scripts/master/ubuntugnome/gnomeshell-extension-manage"
chmod +x /usr/local/bin/gnomeshell-extension-manage
gnomeshell-extension-manage --install --extension-id 1160 --system
dconf update
#wget https://www.dropbox.com/s/essr40c79rngzct/plymouth-theme-nhsbuntu-gnome-text_0.1.1_all.deb
#dpkg -i plymouth-theme-nhsbuntu-gnome-text_0.1.1_all.deb
#rm plymouth-theme-nhsbuntu-gnome-text_0.1.1_all.deb
#wget https://www.dropbox.com/s/jdj4zpewdqqyz36/plymouth-theme-nhsbuntu-gnome-logo_0.1.1_all.deb
#dpkg -i plymouth-theme-nhsbuntu-gnome-logo_0.1.1_all.deb
#rm plymouth-theme-nhsbuntu-gnome-logo_0.1.1_all.deb
rm /usr/share/plymouth/ubuntu-gnome_logo.png
cp /usr/share/plymouth/nhsbuntu-gnome_logo.png /usr/share/plymouth/ubuntu-gnome_logo.png
rm /usr/share/applications/evolution.desktop

#update-initramfs -u
